doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Nomad_Zoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")

        style(type="text/css").
            * {
                box-sizing: border-box;
            }
            input {
                width: 100%;
            }
    body
        header
            h1 Nomad_Zoom
        main
            #nickname 
                form(name="nickname") 
                    input(type="text", id="inputNickname", placeholder="Please enter your nickname.")
                    button(type="button" id="btnEditNickname") Edit
                    button(type="submit" id="btnSaveNickname") Save
            #room
                h3
                ul
                form
                    input(type="text", id="inputRoom", placeholder="Please enter name of the room you want to create.")
                    button(type="submit" id="btnCreateRoom") Create
                
            #chat
                h3
                ul 
                form
                    input(type="text", id="inputRoom", placeholder="Please enter your message.")
                    button(type="button" id="btnLeaveChat") Leave
                    button(type="submit"  id="btnSendChat") Send
                

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")